<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/numberInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/resultBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numberInput" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:background="#f0f0f0"
        android:padding="16dp"
        android:stretchColumns="*"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultBox">

        <!-- Row 1 -->
        <TableRow>

            <Button
                android:id="@+id/btnR1C1"
                android:layout_height="70dp"
                android:layout_margin="4dp"
                android:padding="8dp"
                android:text=""
                android:textSize="32sp" />

            <Button
                android:id="@+id/btnAC"
                android:layout_height="70dp"
                android:layout_margin="4dp"
                android:padding="8dp"
                android:text="AC"
                android:textSize="32sp" />

            <Button
                android:id="@+id/btnCE"
                android:layout_height="70dp"
                android:layout_margin="4dp"
                android:padding="8dp"
                android:text="CE"
                android:textSize="32sp" />

            <Button
                android:id="@+id/btnDivide"
                android:layout_height="70dp"
                android:layout_margin="4dp"
                android:padding="8dp"
                android:text="/"
                android:textSize="32sp" />
        </TableRow>

        <!-- Row 2 -->
        <TableRow>

            <Button
                android:id="@+id/btn7"
                android:layout_height="70dp"
                android:layout_margin="4dp"
                android:padding="8dp"
                android:text="7"
                android:textSize="32sp" />

            <Button
                android:id="@+id/btn8"
                android:layout_height="70dp"
                android:layout_margin="4dp"
                android:padding="8dp"
                android:text="8"
                android:textSize="32sp" />

            <Button
                android:id="@+id/btn9"
                android:layout_height="70dp"
                android:layout_margin="4dp"
                android:padding="8dp"
                android:text="9"
                android:textSize="32sp" />

            <Button
                android:id="@+id/btnMultiply"
                android:layout_height="70dp"
                android:layout_margin="4dp"
                android:padding="8dp"
                android:text="*"
                android:textSize="32sp" />
        </TableRow>

        <!-- Row 3 -->
        <TableRow>

            <Button
                android:id="@+id/btn4"
                android:layout_height="70dp"
                android:layout_margin="4dp"
                android:padding="8dp"
                android:text="4"
                android:textSize="32sp" />

            <Button
                android:id="@+id/btn5"
                android:layout_height="70dp"
                android:layout_margin="4dp"
                android:padding="8dp"
                android:text="5"
                android:textSize="32sp" />

            <Button
                android:id="@+id/btn6"
                android:layout_height="70dp"
                android:layout_margin="4dp"
                android:padding="8dp"
                android:text="6"
                android:textSize="32sp" />

            <Button
                android:id="@+id/btnMinus"
                android:layout_height="70dp"
                android:layout_margin="4dp"
                android:padding="8dp"
                android:text="-"
                android:textSize="32sp" />
        </TableRow>

        <!-- Row 4 -->
        <TableRow>

            <Button
                android:id="@+id/btn1"
                android:layout_height="70dp"
                android:layout_margin="4dp"
                android:padding="8dp"
                android:text="1"
                android:textSize="32sp" />

            <Button
                android:id="@+id/btn2"
                android:layout_height="70dp"
                android:layout_margin="4dp"
                android:padding="8dp"
                android:text="2"
                android:textSize="32sp" />

            <Button
                android:id="@+id/btn3"
                android:layout_height="70dp"
                android:layout_margin="4dp"
                android:padding="8dp"
                android:text="3"
                android:textSize="32sp" />

            <Button
                android:id="@+id/btnPlus"
                android:layout_height="70dp"
                android:layout_margin="4dp"
                android:padding="8dp"
                android:text="+"
                android:textSize="32sp" />
        </TableRow>

        <!-- Row 5 -->
        <TableRow>

            <Button
                android:id="@+id/btnToggleSign"
                android:layout_height="70dp"
                android:layout_margin="4dp"
                android:padding="8dp"
                android:text="+/-"
                android:textSize="32sp" />

            <Button
                android:id="@+id/btn0"
                android:layout_height="70dp"
                android:layout_margin="4dp"
                android:padding="8dp"
                android:text="0"
                android:textSize="32sp" />

            <Button
                android:id="@+id/btnDot"
                android:layout_height="70dp"
                android:layout_margin="4dp"
                android:padding="8dp"
                android:text="."
                android:textSize="32sp" />

            <Button
                android:id="@+id/btnEquals"
                android:layout_height="70dp"
                android:layout_margin="4dp"
                android:padding="8dp"
                android:text="="
                android:textSize="32sp" />
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>